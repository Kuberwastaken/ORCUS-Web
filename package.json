{
  "name": "ORCUS-Web",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "concurrently": "^6.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "build": "npm run build-react && npm run build-flask",
    "build-react": "react-scripts build",
    "build-flask": "echo 'Flask backend is ready to serve the built React files'",
    "start": "concurrently \"npm run start-react\" \"npm run start-flask\"",
    "start-react": "react-scripts start",
    "start-flask": "python detector.py"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
